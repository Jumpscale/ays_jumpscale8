git.build.1                    =
    url:'https://github.com/Jumpscale/agentcontroller2.git',


dependencies.global = redis

dependencies.node = syncthing

dependencies.2                 =
    name:'go',
    type:'build',

#known var's are: $root,$base,$cfg,$jslib,$pylib,$lib
git.export.1                   =
    dest:'$(system.paths.base)/apps/agentcontroller2',
    link:'False',
    source:'agentcontroller2',
    url:'https://git.aydo.com/binary/agentcontroller2/',

git.export.2                   =
    dest:'$(system.paths.app)/agentcontroller2/jumpscripts/jumpscale',
    link:'False',
    source:'/apps/agentcontroller2/jumpscripts',
    url:'https://github.com/Jumpscale/jumpscale_core8/',

#how many instances can be installed of this package, if 1 the instance name is always 'main'
instances.maxnr                = '10'

platform.supported             =
    'linux64',

process.1                      =
    args:'-c agentcontroller2.toml',
    cmd:'./agentcontroller2',
    cwd:'$(system.paths.base)/apps/agentcontroller2/',
    env:,
    filterstr:'agentcontroller2 -c agentcontroller2.toml',
    ports:'',
    prio:'20',
    startupmanager:'tmux',
    timeout_start:'20',
    timeout_stop:'20',
